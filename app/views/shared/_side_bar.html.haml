.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__header__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user), data: {"turbolinks": false} do
            = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-names" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message